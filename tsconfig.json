{
    "compilerOptions": {
      "target": "ES6",                        // 编译后的目标版本
      "module": "ES6",                        // 使用 ES6 模块系统
      "jsx": "react-jsx",                     // 自动引入 React
      "resolveJsonModule": true,              // 允许导入 .json 文件
      "moduleResolution": "node",             // 模块解析策略
      "esModuleInterop": true,                // 允许对 CommonJS 模块进行默认导入
      "skipLibCheck": true,                   // 跳过类型声明文件的检查
      "forceConsistentCasingInFileNames": true, // 文件名大小写一致
      "strict": true,         // 启用严格模式
      "baseUrl": "./src",                          // 设置为项目根目录
      "paths": {
        "@/*": ["*"]                          // 将 @ 映射到 src 目录
      },
    },
    "include": ["src", "declarations.d.ts", "index.d.ts"],                        // 包含的文件/目录
}